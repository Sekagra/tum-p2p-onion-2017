			(-2.2pt,-1pt) -- (2pt,-8.5pt) -- (2pt,-1pt);
		\draw[tie]
			(0pt,-2.5pt) -- (0.8pt,-3.2pt) -- (1.1pt,-6  pt) -- (1.7pt,-8.7pt) -- 
			(2pt,-8.7pt) -- (2  pt,-5.5pt) -- (1  pt,-3.1pt) -- (1.2pt,-2  pt) -- 
