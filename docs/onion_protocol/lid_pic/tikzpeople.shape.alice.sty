\newcommand{\tikzpeople@alice@painthair}{
	\draw[hair]
		(15:3pt) arc (15:160:3pt) arc (160:190:5pt) 
		to[out=280,in=190,in looseness=.5,out looseness=.7] (230:2.9pt)
